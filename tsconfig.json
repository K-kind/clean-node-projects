{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2020",
    "lib": ["ES2021"],
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
